<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".AccademicDetailsFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Personal Details"
        android:id="@+id/personal_details"
        android:layout_margin="20px"
        android:textSize="21sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/personal_details"
        android:layout_margin="20px"
        android:id="@+id/personal_status_bar">
        <Button
            android:layout_width="150px"
            android:layout_height="150px"
            android:text="1"
            android:background="@drawable/round_button"
            />
        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" >
        </Space>
        <Button
            android:layout_width="150px"
            android:layout_height="150px"
            android:text="2"
            android:background="@drawable/round_button"
            />
        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" >
        </Space>
        <Button
            android:layout_width="150px"
            android:layout_height="150px"
            android:text="3"
            android:background="@drawable/round_button"
            />
        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="5" >
        </Space>

    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_button"
        android:layout_below="@+id/personal_status_bar"
        android:layout_margin="20px"
        android:padding="20px"
        android:hint="Father's Name"
        android:id="@+id/father_name"
        android:inputType="text"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_button"
        android:layout_below="@+id/father_name"
        android:layout_margin="20px"
        android:padding="20px"
        android:hint="Father's Mobile Number"
        android:id="@+id/school"
        android:maxLength="12"
        android:inputType="number"/>
    <Button
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:layout_below="@id/school"
        android:layout_margin="20px"
        android:layout_alignParentRight="true"
        android:text="Next"
        android:background="@drawable/background_button"/>



</RelativeLayout>