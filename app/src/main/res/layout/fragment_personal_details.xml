<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_centerInParent="true"
    android:id="@+id/personal_relative_layout"
    tools:context=".Fragments.AccademicDetailsFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Personal Details"
        android:textStyle="bold"
        android:id="@+id/personal_details"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:textSize="21sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/personal_details"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:id="@+id/personal_status_bar">
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="1"
            app:backgroundTint="@color/white"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@drawable/round_button"
            />
        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" >
        </Space>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="2"
            app:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="@drawable/round_button"
            />
        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" >
        </Space>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="3"
            app:backgroundTint="@color/aluminium"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@drawable/round_button"
            />
        <Space
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="5" >
    </Space>

    </LinearLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/outlined_father_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Father's Name"
        android:layout_below="@+id/personal_status_bar"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/father_name"
            android:inputType="textPersonName"
            android:background="@color/white"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/outlined_father_mobile_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Father's Mobile Number"
        android:layout_below="@+id/outlined_father_name"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/father_mobile_number"
            android:inputType="number"
            android:background="@color/white"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/outlined_mother_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mother Name"
        android:layout_below="@+id/outlined_father_mobile_number"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mother_name"
            android:inputType="textPersonName"
            android:background="@color/white"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/outlined_mother_mobile_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mother Mobile Number"
        android:layout_below="@+id/outlined_mother_name"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mother_mobile_number"
            android:inputType="number"
            android:background="@color/white"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/outlined_permanent_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Permanent Address"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_below="@+id/outlined_mother_mobile_number"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/permanent_address"
            android:background="@color/white"
            android:inputType="textPostalAddress"
            />
    </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/personal_back"
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:layout_below="@id/outlined_permanent_address"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="10dp"
                android:text="BACK"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:backgroundTint="@color/aluminium" />

            <Button
                android:id="@+id/personal_next"
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:layout_below="@id/outlined_permanent_address"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="10dp"
                android:text="Next"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:backgroundTint="@color/brown" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>